<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/pale_blue"
    tools:context=".SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="750dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="50dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_micro23"
            android:drawableEnd="@drawable/ic_sound21"
            android:text="" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/paytone_one"
            android:text="Login"
            android:textAlignment="center"
            android:textColor="@color/blk"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/signInRedirectText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/zen_kaku_gothic_new_bold"
            android:padding="8dp"
            android:text="Sign In with your username"
            android:textColor="@color/gray" />

        <EditText
            android:id="@+id/signup_username"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/custom_edittext"
            android:drawableLeft="@drawable/icons8_person_23"
            android:drawablePadding="8dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/zen_kaku_gothic_new_bold"
            android:hint="Username"
            android:inputType="text"
            android:padding="10dp" />

        <EditText
            android:id="@+id/signup_password"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/custom_edittext"
            android:drawableLeft="@drawable/ic_lock"
            android:drawablePadding="8dp"
            android:fontFamily="@font/zen_kaku_gothic_new_bold"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="10dp" />

        <TextView
            android:id="@+id/forgotPasswordText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:fontFamily="@font/zen_kaku_gothic_new_bold"
            android:padding="10dp"
            android:text="Forgot Password?"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/signInWithText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/zen_kaku_gothic_new_bold"
            android:text="Or Sign In With"
            android:textColor="@color/fellow_blue" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/googleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/custom_edittext"
            android:drawableLeft="@drawable/ic_google23"
            android:fontFamily="@font/zen_kaku_gothic_new_bold"
            android:padding="10dp"
            android:text="Sign in with Google"
            android:textAllCaps="false"
            android:textColor="@color/black" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/button_outline"
            android:fontFamily="@font/poppins_bold"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/create_button"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_solid"
            android:fontFamily="@font/poppins_bold"
            android:text="Create your account"
            android:textAllCaps="false"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/zen_kaku_gothic_new_medium"
            android:text="By using Thrive, you agree and consent to our:"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/zen_kaku_gothic_new_medium"
            android:text="Terms of Service          Cookie Policy          Privacy Policy"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/zen_kaku_gothic_new_medium"
            android:text="Your Privacy Choices"
            android:textSize="10sp" />

    </LinearLayout>

</LinearLayout>
